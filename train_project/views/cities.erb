<h1>CHoo Choooooo</h1>
<h3>Destinations</h3>

<% if @cities.any? %>
  <ul>
    <% @cities.each do |city| %>
      <li><a href="/cities/<%= city.id%>"><%= city.name %></a></li>
    <% end %>
  </ul>
<% else %>
  p>There are curently no destinations to display.</p>
<% end %>

<a href="/cities/new">Add a new city</a>
<button type='submit' class='btn'>Go!</button>
